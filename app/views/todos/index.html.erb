<main class="TodoPageMain">
    <article>
        <h1 class="TodoPage-Title">My To-do List</h1>
        <form class="AddTodo" method="POST" action="/todos">
           <input class="AddTodo-text" name="todo_text" type="text" placeholder="what's next?">
           <input class="AddTodo-date" name="due_date" type="date">
           <input class="AddTodo-button" type="submit" value="Add">
        </form>
        <%= render partial: "todo-section",locals: {
            section_title: "Overdue",
            todos: Todo.overdue_list.due,
            show_due_date:true
        }%>
        <%= render partial: "todo-section",locals: {
            section_title: "Due Today",
            todos: Todo.due_today_list,
            show_due_date:false
        }%>
        <%= render partial: "todo-section",locals: {
            section_title: "Due Later",
            todos: Todo.due_later_list,
            show_due_date:true
        }%>
    </article>
</main>
