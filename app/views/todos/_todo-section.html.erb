<section class="TodoSection">
            <div class="TodoSectionTitle">
                    <p class="TodoSectionTitle-text"><%= section_title%></p>
                    <p class="TodoSectionTitle-remainingCount"><%=todos.completed.count%>/<%=todos.count%></p>
            </div>


            <ul>
            <% todos.all.each do |todo|%>
                <li class="TodoItem">
                    <div class="TodoItem-Container">

                    <%if todo.completed%>
                        <input class="TodoItem-checkbox" type="checkbox" checked>
                        <p class="completed-TodoItem-text"><%=todo.todo_text%></p>
                    <%else%>
                        <input class="TodoItem-checkbox" type="checkbox">
                        <p class="TodoItem-text"><%=todo.todo_text%></p>
                    <%end%>

                    <% if show_due_date%>
                    <p class ="TodoItem-due_date"><%= todo.due_date.to_s(:short)%><p>
                    <% end%>
                    <img class="TodoItem-delete" src="TrashIcon.svg">
                    </div>
                </li>
            <% end%>
            </ul>
</section>
